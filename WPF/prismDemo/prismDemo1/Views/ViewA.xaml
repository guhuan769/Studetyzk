<UserControl x:Class="prismDemo1.Views.ViewA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prismDemo1.Views"
             xmlns:prism ="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             xmlns:local1="clr-namespace:prismDemo1.Converter"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local1:ForeColorConverter x:Key="foreColor"></local1:ForeColorConverter>
    </UserControl.Resources>
    <Grid>
        <TextBlock Text="{Binding Title}" FontSize="80"/>
        <TextBox  Text="{Binding State,Converter={StaticResource foreColor},Mode=TwoWay}" Height="200" Width="auto" FontSize="80"/>
    </Grid>
</UserControl>
